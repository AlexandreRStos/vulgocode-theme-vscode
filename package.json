{
  "name": "vulgocode-color-theme",
  "displayName": "Vulgocode Color Theme",
  "description": "Beautiful Dark Theme for VSCode.",
  "version": "0.6.0",
  "publisher": "alexandreramos",
  "engines": {
    "vscode": "^1.21.0"
  },
  "maintainers": [
    "Alexandre Ramos <alexandresantos84@gmail.com>"
  ],
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "theme",
    "dark",
    "vulgo code",
    "vulgocode-theme",
    "vulgocode color theme",
    "spotify",
    "github markdown",
    "markdown",
    "checkbox",
    "checkboxes",
    "task list",
    "multi-root ready",
    "github"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandreramosdev/vulgocode-theme-vscode"
  },
  "bugs": {
    "url": "https://github.com/alexandreramosdev/vulgocode-theme-vscode/issues"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "contributes": {
    "themes": [
      {
        "label": "Vulgocode Color Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/Vulgocode-Color-Theme.json"
      },
      {
        "label": "Vulgocode Color Theme Bold",
        "uiTheme": "vs-dark",
        "path": "./themes/Vulgocode-Color-Theme-bold.json"
      }
    ],
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./themes/base.css",
      "./themes/github-markdown.css",
      "./node_modules/highlight.js/styles/github.css",
      "./themes/checkboxes.css"
    ]
  },
  "activationEvents": [],
  "main": "./index.js",
  "galleryBanner": {
    "color": "#212121",
    "theme": "dark"
  },
  "scripts": {
    "build": "node build.js",
    "watch": "chokidar src/* -c 'npm run build'"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.2",
    "github-markdown-css": "^3.0.1",
    "lodash": "^4.17.11"
  },
  "dependencies": {
    "highlight.js": "^9.15.6",
    "markdown-it-task-lists": "^2.1.1"
  }
}
